# Database Configuration
# PostgreSQL connection string with connection pooling (for production use)
DATABASE_URL="postgresql://username:password@localhost:5432/child_protection?pgbouncer=true"

# Shadow database for Prisma migrations (required for development)
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/child_protection_shadow"

# Authentication Configuration
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here-replace-with-generated-value"
NEXTAUTH_URL="http://localhost:3000"

# JWT Configuration
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-here-replace-with-generated-value"

# Application URLs
APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Configuration (SMTP)
# Gmail example:
# - SMTP_HOST="smtp.gmail.com"
# - SMTP_PORT="587"
# - SMTP_USER="your-email@gmail.com"
# - SMTP_PASS="your-app-password" (use App Password if 2FA is enabled)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password-or-app-password"
EMAIL_FROM="Child Protection Directory <noreply@yourdomain.com>"

# Optional: Mapbox Configuration (for map features)
# Get your token from https://account.mapbox.com/
# NEXT_PUBLIC_MAPBOX_TOKEN="your-mapbox-token"

# Optional: Error Tracking (Sentry)
# SENTRY_DSN="your-sentry-dsn"

# Optional: Analytics
# NEXT_PUBLIC_GA_ID="your-google-analytics-id"

# Node Environment (development | production | test)
NODE_ENV="development"

# Server Port (default: 3000)
# PORT="3000"


